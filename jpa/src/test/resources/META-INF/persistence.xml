<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    <persistence-unit name="test-persistence-unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>jpa.examples.online_learning_platform.course.Course</class>
        <class>jpa.examples.online_learning_platform.course.CourseModule</class>
        <class>jpa.examples.online_learning_platform.course.Lesson</class>
        <class>jpa.examples.online_learning_platform.course.LessonSection</class>
        <class>jpa.examples.online_learning_platform.course.LessonContent</class>
        <class>jpa.examples.online_learning_platform.course.LessonText</class>
        <class>jpa.examples.online_learning_platform.course.LessonCode</class>
        <class>jpa.examples.online_learning_platform.course.LessonFigure</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <!-- Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto"
                      value="create-drop"/> <!-- RecrÃ©e la base pour chaque nouveau test -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>