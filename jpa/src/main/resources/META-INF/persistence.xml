<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    <persistence-unit name="testPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>jpa.examples.online_learning_platform.course.Course</class>
        <class>jpa.examples.online_learning_platform.course.CourseModule</class>
        <class>jpa.examples.online_learning_platform.course.Lesson</class>
        <class>jpa.examples.online_learning_platform.course.LessonSection</class>
        <class>jpa.examples.online_learning_platform.course.LessonContent</class>
        <class>jpa.examples.online_learning_platform.course.LessonText</class>
        <class>jpa.examples.online_learning_platform.course.LessonCode</class>
        <class>jpa.examples.online_learning_platform.course.LessonFigure</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/test"/>
            <property name="jakarta.persistence.jdbc.user" value="admin"/>
            <property name="jakarta.persistence.jdbc.password" value="secret"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- Hibernate specific configuration -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto"
                      value="create-drop"/> <!-- Create schema on start, drop after tests -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>